{
  "name": "qat-notifier",
  "displayName": "QAT مقيل",
  "description": "إضافة VS Code بإشعارات عربية ساخرة ومحفزة مبنية على قواعد لحالة الملفات ونشاطك (أخطاء/تحذيرات/نظيف/خمول) مع تبريد لمنع الإزعاج.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Productivity"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/moatasem-alhilali/qat-notifier-vs-code.git"
  },
  "activationEvents": [
    "onStartupFinished",
    "onCommand:qat-notifier.reloadRules"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "qat-notifier.reloadRules",
        "title": "QAT: Reload Rules"
      }
    ],
    "configuration": {
      "title": "QAT Notifier",
      "properties": {
        "qat.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable QAT Notifier."
        },
        "qat.rulesPath": {
          "type": "string",
          "default": ".vscode/qat-rules.json",
          "description": "Path to the rules file relative to the workspace root or an absolute path."
        },
        "qat.globalCooldownMs": {
          "type": "number",
          "default": 15000,
          "description": "Global cooldown between notifications in milliseconds."
        },
        "qat.maxScanChars": {
          "type": "number",
          "default": 20000,
          "description": "Maximum number of characters to scan from a document."
        },
        "qat.idleMs": {
          "type": "number",
          "default": 120000,
          "description": "Idle time in milliseconds before idle rules can trigger."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
